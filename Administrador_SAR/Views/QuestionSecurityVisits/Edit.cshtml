@model Administrador_SAR.DBContext.QuestionSecurityVisit

@{
    ViewBag.Title = "Editar";
    ViewBag.SubTitle = "Editar Pregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box mb-30 p-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Visita de Seguridad</label>
            <div class="col-md-10">
                @Html.DropDownList("IdSecurityVisit", null, htmlAttributes: new { @disabled = "disabled", @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.IdSecurityVisit, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Pregunta</label>
            <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })                
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Activo</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Regresar", "Details", "SecurityVisits", new { id = Model.IdSecurityVisit }, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    </div>
    }
</div>
