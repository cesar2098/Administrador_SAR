@model Administrador_SAR.Models.LoginModelRequest
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 col-lg-12" style="margin:auto">
            @*<img style="width:400px" src="~/vendors/images/rodio1.jpg" alt="" >*@
            @*<h2 class="text-center">Bienvenido</h2>*@
            <h2 class="text-center">Portal de mantenimiento SAR</h2>
            <br />
        </div>
        <div class="col-md-12 col-lg-12">
            <div class="login-box bg-white box-shadow border-radius-10">
                <div class="login-title">
                    <h2 class="text-center text-primary">Inicio de Sesión</h2>
                </div>
                @using (Html.BeginForm("login", "Login", FormMethod.Post))
                {

                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <div class="input-group custom">

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <div class="input-group-append custom">
                            <span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
                        </div>

                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <div class="input-group custom">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                        <div class="input-group-append custom">
                            <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                        </div>
                    </div>
                    @Html.ValidationMessage("NotFound", new { @class = "text-danger" })
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <div class="input-group mb-0">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Ingresar</button>
                            </div>
                            <div class="font-16 weight-600 pt-10 pb-10 text-center">
                                <a href="#">¿Olvido su contraseña ?</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
