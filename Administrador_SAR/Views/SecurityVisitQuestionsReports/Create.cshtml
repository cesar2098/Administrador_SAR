@model Administrador_SAR.DBContext.SecurityVisitQuestionsReport

@{
    ViewBag.Title = "Crear Preguntas";
    ViewBag.SubTitle = "Crear Preguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">
    <div class="header-left">
        <div class="menu-icon dw dw-menu"></div>
        <div class="search-toggle-icon dw dw-search2" data-toggle="header_search"></div>
    </div>
    <div class="header-right">
        <div class="user-info-dropdown">
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                    <span class="user-icon">
                        <img src="~/vendors/images/photo1.jpg" alt="">
                    </span>
                    @if (Session["UserName"] != null)
                    {
                        <span class="user-name">@Session["UserName"]</span>
                    }
                </a>
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                    <a class="dropdown-item" href="profile.html"><i class="dw dw-user1"></i>Perfil</a>
                    <a class="dropdown-item" href="profile.html"><i class="dw dw-settings2"></i> Configuraciones</a>
                    <a class="dropdown-item" href="faq.html">@*<i class="dw dw-help"></i> Help*@</a>
                    <a class="dropdown-item" href="/Home/CerrarSesion"><i class="dw dw-logout"></i>Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-header">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1>Crear Preguntas</h1>
        </div>
    </div>
</div>

<div class="card-box mb-30">
    <div class="pd-30">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Preguntas de Seguridad</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="Name" class="control-label col-md-2">Reporte</label>
                <div class="col-md-10">
                    @Html.DropDownList("ReportId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReportId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Descripción</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Opción 1</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Si, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Si, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Opción 2</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.No, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Opción 3</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Np, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Np, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Comentarios</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Name" class="control-label col-md-2">Fecha Inicial</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.InitialDate, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.InitialDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                        </div>
                        <div class="col-md-2">
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-dark" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
