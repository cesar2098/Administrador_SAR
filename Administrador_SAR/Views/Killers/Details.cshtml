    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box mb-30 p-2">
    <div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Activo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
