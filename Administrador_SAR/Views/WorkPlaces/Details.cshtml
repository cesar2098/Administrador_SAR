@model Administrador_SAR.DBContext.WorkPlaces

@{
    ViewBag.Title = "Informacion";
    ViewBag.SubTitle = "Información Obra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <div class="container-fluid">
        <h3>Informacion General</h3>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class = "control-label col-md-2">Código</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-2">Descripción</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-2">País</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Countries.Name, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label col-md-2">Dirección</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-2">Activo</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control", @readonly = true, @type = "datetime" } })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-2">Fecha</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @readonly = true, @type = "datetime" } })
                    </div>
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Editar Informacion", "Edit", new { id = Model.WorkPlaceId }, new { @class = " btn btn-warning" })
            @Html.ActionLink("Volver", "Index", null, new { @class = " btn btn-dark" })
        </p>
    </div>
    <br />
    <h3>Acciones</h3>
    @Html.ActionLink("Ver Reportes SAR", "Index", "Reports", new { WorkPlaceId = Model.WorkPlaceId }, new { @class = "btn btn-dark", @style = "padding:50px" })
    @Html.ActionLink("Administrar Usuarios", "Index", "WorkPlaces", null, new { @class = "btn btn-dark", @style = "padding:50px" })
</div>

