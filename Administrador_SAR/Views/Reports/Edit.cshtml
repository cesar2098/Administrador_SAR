@model Administrador_SAR.DBContext.Reports

@{
    ViewBag.Title = "Editar Reportes";
    ViewBag.SubTitle = "Editar Reportes SAR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Reports</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label col-md-2">Fecha de Creacion</label>
        <div class="col-md-10">
            <span>@Model.CreatedDate.GetDateTimeFormats()[10]</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Usuario</label>
        <div class="col-md-10">
            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Descripcion</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Estado</label>
        <div class="col-md-10">
            @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Categoria</label>
        <div class="col-md-10">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Centro de Trabajo</label>
        <div class="col-md-10">
            @Html.DropDownList("WorkPlaceId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WorkPlaceId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Situacion Detectada</label>
        <div class="col-md-10">
            @Html.DropDownList("SituationId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SituationId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Comentario</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Killer</label>
        <div class="col-md-10">
            @Html.DropDownList("KillerId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KillerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Factor</label>
        <div class="col-md-10">
            @Html.DropDownList("FatorId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FatorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Accion Correctiva</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CorrectiveComment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CorrectiveComment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-2">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-dark" })
            </div>
        </div>

    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
